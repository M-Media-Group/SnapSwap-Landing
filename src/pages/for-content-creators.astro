---
import Layout from '~/layouts/PageLayout.astro';

import Header from '~/components/widgets/Header.astro';
import Hero from '~/components/widgets/Hero.astro';
import Note from '~/components/widgets/Note.astro';
import Features from '~/components/widgets/Features.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Steps from '~/components/widgets/Steps.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import FAQs from '~/components/widgets/FAQs.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'SnapSwap — Free template for creating websites with Astro + Tailwind CSS',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Fragment slot="header">
    <Header
      logoLink="#"
      links={[
        { text: 'Home', href: '#' },
        { text: 'How it works', href: '#how-it-works' },
        { text: 'Features', href: '#features' },
        { text: 'FAQ', href: '#faq' },
      ]}
      actions={[
        {
          text: 'Browse deals',
          href: '#',
        },
      ]}
      isSticky
      showToggleTheme
    />
  </Fragment>

  <!-- Hero Widget ******************* -->

  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Browse deals',
        href: '#',
        icon: 'tabler:pig-money',
      },
      { text: 'How it works', href: '#how-it-works' },
    ]}
    image={{ src: '~/assets/images/hero-image-4.svg', alt: 'SnapSwap Hero Image' }}
  >
    <Fragment slot="title">
      Swap pics <span class="hidden sm:inline">and vids</span> for
      <span class="text-accent dark:text-white highlight"> food, activites, and services</span>
    </Fragment>

    <Fragment slot="subtitle">
      <span class="hidden sm:inline">
        <span class="font-semibold">SnapSwap</span> shows you thousands of local businesses that are willing to offer you
        deals for content.</span
      >
      <span class="block mb-1 sm:hidden font-bold text-blue-600">SnapSwap: Travel cheaper.</span>
      Redeem the best deals by sharing rights to content you're recording anyway.
    </Fragment>
  </Hero>

  <!-- Note Widget ******************* -->

  <Note />

  <!-- Steps Widget ****************** -->

  <Steps
    id="how-it-works"
    title="Trade travel pics for local deals"
    items={[
      {
        title: 'Step 1: <span class="font-medium">Find food, activites, or services</span>',
        description: "Browse around the area you're eyeing. Find the best deals and include them in your travel plans.",
        icon: 'tabler:burger',
      },
      {
        title: 'Step 2: <span class="font-medium">Submit pics or vids</em>',
        description: "Take a pic or video of the deal you're redeeming. Submit it to the business with SnapSwap.",
        icon: 'tabler:camera',
      },
      {
        title: 'Step 3: <span class="font-medium">Redeem deals</span>',
        description: 'Get the deal. Present it to the business. Done!',
        icon: 'tabler:paint',
      },
      {
        title: 'Ready!',
        icon: 'tabler:check',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1605264522799-1996bdbe5f72?q=80&w=2309&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D',
      alt: 'Photo by Caroline Selfors on Unsplash',
      caption: "Horse riding in exchange for photos of the experience. It's a win-win! Photo by Kajetan Sumila",
    }}
  />

